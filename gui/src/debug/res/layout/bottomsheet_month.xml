                    android:id="@+id/tv_dash"
                    android:layout_width="60dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginEnd="28dp"
                    android:fontFamily="@font/hhgrotesk_bold"
                    android:background="@drawable/bg_rounded_card_month_outline"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:id="@+id/tv_jan"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginEnd="28dp"
                    android:fontFamily="@font/hhgrotesk_bold"
                    android:background="@drawable/bg_rounded_card_month_outline"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="January"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_dash"
                    />
                <TextView
                    android:id="@+id/tv_feb"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginEnd="28dp"
                    android:fontFamily="@font/hhgrotesk_bold"
                    android:background="@drawable/bg_rounded_card_month_outline"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="February"
                    android:textColor="@color/white"
                    android:textSize="14dp"
