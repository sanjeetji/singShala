                    android:layout_marginEnd="28dp"
                    android:fontFamily="@font/hhgrotesk_bold"
                    android:background="@drawable/bg_rounded_card_month_outline"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="August"
