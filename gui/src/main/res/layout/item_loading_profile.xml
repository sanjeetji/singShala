<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clLoadingProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#29282E">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_profilePic"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="11dp"
        android:elevation="12dp"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardCornerRadius="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/shape_grey_loading"
        app:layout_constraintBottom_toTopOf="@+id/tv_Location"
        app:layout_constraintStart_toEndOf="@+id/cv_profilePic"
        app:layout_constraintTop_toTopOf="@+id/cv_profilePic" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_Location"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:background="@drawable/shape_grey_loading"
        app:layout_constraintBottom_toBottomOf="@+id/cv_profilePic"
        app:layout_constraintStart_toEndOf="@+id/cv_profilePic"
        app:layout_constraintTop_toBottomOf="@+id/tv_DisplayName" />


    <View
        android:id="@+id/vlevel"
        android:layout_width="75dp"
        android:layout_height="38dp"
        android:background="@drawable/bg_rounded_view_all"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/cv_profilePic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cv_profilePic" />

    <androidx.cardview.widget.CardView
        android:id="@+id/llcProgress"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="@id/vlevel"
        app:layout_constraintEnd_toEndOf="@id/vlevel"
        app:layout_constraintTop_toTopOf="@id/vlevel">

        <ProgressBar
            android:id="@+id/pbLevel"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:background="@drawable/blue_circle"
            android:indeterminate="false"
            android:max="100"
            android:progress="61"
            android:progressDrawable="@drawable/circular_progress_timing_level"
            android:visibility="visible" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvUserStatus"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/shape_grey_loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cv_profilePic"
        app:layout_constraintTop_toBottomOf="@+id/cv_profilePic" />


    <include
        android:id="@+id/includeThumbnail1"
        layout="@layout/item_profile_thumbnails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/includeThumbnail2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUserStatus" />

    <include
        android:id="@+id/includeThumbnail2"
        layout="@layout/item_profile_thumbnails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/includeThumbnail1" />


</androidx.constraintlayout.widget.ConstraintLayout>