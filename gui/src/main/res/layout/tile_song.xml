<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_tile_song"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_play"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_circle_outline"
        app:tint="@color/white_ope_60"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_pause"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:visibility="gone"
        android:indeterminateTint="@color/secondary_2"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginVertical="16dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_audiotrack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="48dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/ll_difficulty_bars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/level_1"
            android:layout_width="5dp"
            android:layout_height="6dp"
            android:background="@drawable/difficulty_corners" />

        <View
            android:id="@+id/level_2"
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_marginStart="3dp"
            android:background="@drawable/difficulty_corners" />

        <View
            android:id="@+id/level_3"
            android:layout_width="5dp"
            android:layout_height="15dp"
            android:layout_marginStart="3dp"
            android:background="@drawable/difficulty_corners" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/br_text_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/ll_difficulty_bars"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_heading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/hkgrotesk_regular"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@id/tv_lyrics"
        app:layout_constraintEnd_toStartOf="@id/br_text_barrier"
        app:layout_constraintStart_toEndOf="@id/iv_thumbnail"
        app:layout_constraintTop_toTopOf="@id/iv_thumbnail"
        tools:ignore="SpUsage"
        tools:text="Sample title of the song title of the song title of the song title of the song" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_lyrics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/hhgrotesk_italic"
        android:gravity="start|center_vertical"
        android:alpha="0.5"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_thumbnail"
        app:layout_constraintEnd_toStartOf="@id/br_text_barrier"
        app:layout_constraintStart_toEndOf="@id/iv_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/tv_heading"
        tools:ignore="SpUsage"
        tools:text="Sample lyrics of the song sample lyrics of the song sample lyrics of the song sample lyrics of the song" />

</androidx.constraintlayout.widget.ConstraintLayout>
