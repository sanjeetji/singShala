<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_top_corners"
    android:padding="20dp">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbAuto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_options"
            android:button="@android:color/transparent"
            android:checked="true"
            android:fontFamily="@font/hkgrotesk_regular"
            android:paddingStart="45dp"
            android:text="Auto"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rb1080p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_options"
            android:button="@android:color/transparent"
            android:fontFamily="@font/hkgrotesk_regular"
            android:paddingStart="45dp"
            android:text="1080p"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rb720p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_options"
            android:button="@android:color/transparent"
            android:fontFamily="@font/hkgrotesk_regular"
            android:paddingStart="45dp"
            android:text="720p"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rb480p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_options"
            android:button="@android:color/transparent"
            android:fontFamily="@font/hkgrotesk_regular"
            android:paddingStart="45dp"
            android:text="480p"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rb360p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_options"
            android:button="@android:color/transparent"
            android:fontFamily="@font/hkgrotesk_regular"
            android:paddingStart="45dp"
            android:text="360p"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>