<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_record_first_song_cta_card"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_song_thumbnail"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_song_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/hhgrotesk_bold"
        tools:text="Aap Jaisa Koi"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_artists"
        app:layout_constraintStart_toEndOf="@+id/iv_song_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/iv_song_thumbnail" />


    <TextView
        android:id="@+id/tv_artists"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/hhgrotesk_bold"
        tools:text="Nazia Hassan"
        android:textColor="@color/text_header_grey"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_song_thumbnail"
        app:layout_constraintStart_toEndOf="@+id/iv_song_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/tv_song_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sing_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:background="@drawable/bg_rounded_purpule"
        android:drawablePadding="10dp"
        android:fontFamily="@font/hhgrotesk_bold"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="@string/sing"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/ic_white_mic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>