<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardBackgroundColor="@color/bg_card"
    app:cardCornerRadius="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clReportVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:paddingEnd="20dp">

        <RadioGroup
            android:id="@+id/tvReportText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:button="@android:color/transparent"
                android:fontFamily="@font/hhgrotesk_bold"
                android:gravity="left"
                android:padding="15dp"
                android:text="Detailed Analysis"
                android:textColor="@color/song_subtitle"
                android:textSize="14sp" />

            <RadioButton
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:button="@android:color/transparent"
                android:fontFamily="@font/hhgrotesk_bold"
                android:gravity="left"
                android:padding="15dp"
                android:text="Edit Caption"
                android:textColor="@color/song_subtitle"
                android:textSize="14sp" />

            <RadioButton
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:button="@android:color/transparent"
                android:fontFamily="@font/hhgrotesk_bold"
                android:gravity="left"
                android:padding="15dp"
                android:text="Share Video"
                android:textColor="@color/song_subtitle"
                android:textSize="14sp" />


            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:button="@android:color/transparent"
                android:fontFamily="@font/hhgrotesk_bold"
                android:gravity="left"
                android:padding="15dp"
                android:text="Make Private"
                android:textColor="@color/song_subtitle"
                android:textSize="14sp" />

            <RadioButton
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:button="@android:color/transparent"
                android:fontFamily="@font/hhgrotesk_bold"
                android:gravity="left"
                android:padding="15dp"
                android:text="Delete Cover"
                android:textColor="@color/song_subtitle"
                android:textSize="14sp" />


        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>