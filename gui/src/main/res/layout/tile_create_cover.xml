<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:paddingVertical="16dp"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    android:background="@drawable/bg_tile_create_cover"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:rotation="-30"
        android:alpha="0.5"
        android:src="@drawable/ic_mic_sing"
        android:translationX="62dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white_ope_38" />


    <TextView
        android:id="@+id/title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/hhgrotesk_bold"
        android:text="@string/cover"
        android:textColor="@color/white_ope_60"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sing_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/next_button_drawable"
        android:drawablePadding="8dp"
        android:fontFamily="@font/hhgrotesk_bold"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:text="@string/sing"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:drawableStartCompat="@drawable/ic_mic_sing"
        app:drawableTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:ignore="SpUsage" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_grey_sing_a_song"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sing_button" />

    <View
        android:id="@+id/view_save_draft"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_rounded_card"
        android:backgroundTint="#3D3B48"
        app:layout_constraintTop_toTopOf="@id/space_1"
        app:layout_constraintBottom_toBottomOf="@id/space_2"/>

    <androidx.legacy.widget.Space
        android:id="@+id/space_1"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/view_divider"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/draftsCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_info"
        android:drawablePadding="8dp"
        android:fontFamily="@font/hhgrotesk_bold"
        android:paddingHorizontal="14dp"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/space_1"
        tools:text="4 Drafts Pending" />

    <TextView
        android:id="@+id/tv_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Get"
        android:textColor="@color/white_ope_70"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_totalXP"
        app:layout_constraintStart_toStartOf="@id/draftsCount"
        app:layout_constraintTop_toTopOf="@id/tv_totalXP" />

    <TextView
        android:id="@+id/tv_totalXP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_rounded_blue"
        android:backgroundTint="#333232"
        android:fontFamily="@font/hhgrotesk_bold"
        android:gravity="left"
        android:maxLines="2"
        android:paddingHorizontal="6dp"
        android:paddingVertical="4dp"
        android:textColor="@color/green"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@id/tv_get"
        app:layout_constraintTop_toBottomOf="@id/draftsCount"
        tools:text="+16535 XP" />

    <androidx.legacy.widget.Space
        android:id="@+id/space_2"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_totalXP"/>


</androidx.constraintlayout.widget.ConstraintLayout>


