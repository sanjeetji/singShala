<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_otherUserRanks"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_rounded_card">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="72dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/hhgrotesk_bold"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/iv_thumbnail"
        app:layout_constraintTop_toTopOf="@id/iv_thumbnail"
        tools:ignore="SpUsage"
        tools:text="Sample title of the song" />

    <TextView
        android:id="@+id/tv_artists"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:alpha="0.5"
        android:ellipsize="end"
        android:fontFamily="@font/hkgrotesk_regular"
        android:lines="1"
        android:textColor="#FFFFFF"
        android:textSize="13dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_title"
        app:layout_constraintEnd_toStartOf="@id/ib_delete"
        app:layout_constraintStart_toEndOf="@+id/tv_title"
        tools:ignore="SpUsage"
        tools:text="Artist Name Artist Name Artist Name Artist Name " />

    <TextView
        android:id="@+id/tv_created_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:alpha="0.6"
        android:fontFamily="@font/hhgrotesk_italic"
        android:lines="1"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@id/ib_delete"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:ignore="SpUsage"
        tools:text="Created on 3 months ago" />

    <Button
        android:id="@+id/btn_publish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/next_button_drawable"
        android:fontFamily="@font/hhgrotesk_bold"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:paddingHorizontal="24dp"
        android:text="@string/publish"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/btn_analyse"
        app:layout_constraintStart_toStartOf="@+id/tv_created_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_created_time" />

    <TextView
        android:id="@+id/btn_analyse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_grey_corner_radius"
        android:drawableStart="@drawable/ic_analyse"
        android:fontFamily="@font/hhgrotesk_bold"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:paddingHorizontal="12dp"
        android:text="@string/analyse"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/btn_publish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_publish"
        app:layout_constraintTop_toTopOf="@id/btn_publish" />

    <TextView
        android:id="@+id/tv_gain_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/hkgrotesk_regular"
        android:text="Score"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/btn_publish"
        app:layout_constraintTop_toBottomOf="@id/btn_publish"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/tv_xp_gained"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/hhgrotesk_bold"
        android:textColor="@color/light_green"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_gain_label"
        app:layout_constraintStart_toEndOf="@id/tv_gain_label"
        app:layout_constraintTop_toTopOf="@id/tv_gain_label"
        tools:ignore="SpUsage"
        tools:text="+345 XP" />

    <ImageView
        android:id="@+id/ib_delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:scaleType="center"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>