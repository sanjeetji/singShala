<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:keepScreenOn="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_video_player_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <!--    rest of the player overlay e.g. clap, share, comments etc goes here -->

        <ProgressBar
            android:id="@+id/pb_feed_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progressDrawable="@drawable/bg_progress_bar_feed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_clap_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="220dp"
            android:alpha="0.8"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_clap_notification"
            android:fontFamily="@font/hhgrotesk_bold"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="@string/clap_to_view_continue"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/ib_clap"
            app:layout_constraintEnd_toStartOf="@+id/ib_clap"
            app:layout_constraintTop_toTopOf="@id/ib_clap" />

        <View
            android:id="@+id/v_clap_notification_arrow"
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:background="@drawable/ic_callout_arrow"
            app:layout_constraintBottom_toBottomOf="@id/tv_clap_notification"
            app:layout_constraintStart_toEndOf="@id/tv_clap_notification"
            app:layout_constraintTop_toTopOf="@id/tv_clap_notification" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/g_clap_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tv_clap_notification,v_clap_notification_arrow" />

        <View
            android:id="@+id/v_wave"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:alpha="0"
            android:background="@drawable/bg_wave"
            android:backgroundTint="@color/goldish_yellow"
            app:layout_constraintBottom_toBottomOf="@id/ib_clap"
            app:layout_constraintEnd_toEndOf="@id/ib_clap"
            app:layout_constraintStart_toStartOf="@id/ib_clap"
            app:layout_constraintTop_toTopOf="@id/ib_clap" />

        <View
            android:id="@+id/v_circle"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/blue_secondary_circle"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/ib_clap"
            app:layout_constraintEnd_toEndOf="@id/ib_clap"
            app:layout_constraintStart_toStartOf="@id/ib_clap"
            app:layout_constraintTop_toTopOf="@id/ib_clap" />

        <ImageButton
            android:id="@+id/ib_clap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/white_circle_design"
            android:scaleType="centerCrop"
            android:padding="4dp"
            android:src="@drawable/ic_claps_img"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/tv_claps_count"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_claps_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/hhgrotesk_bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/ib_comment"
            app:layout_constraintEnd_toEndOf="@id/ib_clap"
            app:layout_constraintStart_toStartOf="@id/ib_clap"
            tools:ignore="SpUsage"
            tools:text="314" />

        <ImageButton
            android:id="@+id/ib_comment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/white_circle_design"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_comment"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/tv_comment_count"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hhgrotesk_bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:visibility="invisible"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/ib_share"
            app:layout_constraintEnd_toEndOf="@id/ib_share"
            app:layout_constraintStart_toStartOf="@id/ib_share"
            tools:ignore="SpUsage"
            tools:text="5" />

        <ImageButton
            android:id="@+id/ib_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/white_circle_design"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:visibility="invisible"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_share_baseline"
            app:layout_constraintBottom_toTopOf="@+id/tv_share_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_share_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hhgrotesk_bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/tv_share_text"
            app:layout_constraintEnd_toEndOf="@id/ib_share"
            app:layout_constraintStart_toStartOf="@id/ib_share"
            tools:ignore="SpUsage"
            tools:text="314" />

        <TextView
            android:id="@+id/tv_share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hhgrotesk_bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:visibility="invisible"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/ib_more_options"
            app:layout_constraintEnd_toEndOf="@id/ib_share"
            app:layout_constraintStart_toStartOf="@id/ib_share"
            tools:ignore="SpUsage"
            android:text="Share" />

        <ImageButton
            android:id="@+id/ib_more_options"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="248dp"
            android:background="@drawable/white_circle_design"
            android:scaleType="center"
            android:src="@drawable/ic_more_hori"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvViewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/ic_play_small_white"
            android:drawableTint="@color/white"
            android:drawablePadding="8dp"
            android:elevation="4dp"
            android:ellipsize="end"
            android:visibility="invisible"
            android:fontFamily="@font/hhgrotesk_bold"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@id/ib_more_options"
            app:layout_constraintTop_toTopOf="@id/ib_more_options"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpUsage"
            tools:text="124" />

        <RadioGroup
            android:id="@+id/rg_feed_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/rb_for_you"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/hkgrotesk_regular"
                android:textColor="@color/selector_color_white_grey"
                android:textSize="16dp"
                android:button="@null"
                android:visibility="visible"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_lvl"
                app:layout_constraintStart_toEndOf="@+id/iv_profilePicture"
                app:layout_constraintTop_toTopOf="@+id/iv_profilePicture"
                android:text="For You" />

            <RadioButton
                android:id="@+id/rb_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hkgrotesk_regular"
                android:textColor="@color/selector_color_white_grey"
                android:button="@null"
                android:textSize="16dp"
                android:visibility="visible"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_lvl"
                app:layout_constraintStart_toEndOf="@+id/iv_profilePicture"
                app:layout_constraintTop_toTopOf="@+id/iv_profilePicture"
                android:text="Following" />

        </RadioGroup>

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:padding="2dp"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/rg_feed_type"
            app:layout_constraintBottom_toBottomOf="@id/rg_feed_type"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_mic"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ib_button_selector"
            android:scaleType="fitCenter"
            android:visibility="visible"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_mic_sing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/rg_feed_type"
            app:layout_constraintBottom_toBottomOf="@id/rg_feed_type"
            app:tint="@color/white" />

        <ProgressBar
            android:id="@+id/pb_loading"
            style="?android:attr/progressBarStyle"
            android:indeterminateTint="@color/white"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/inc_bottom_sheet"
        layout="@layout/bottomsheet_feed_updated" />

    <include
        android:id="@+id/inc_editcap"
        android:visibility="invisible"
        layout="@layout/bottomsheet_edit_caption" />

    <include
        android:id="@+id/inc_share_options"
        android:visibility="visible"
        layout="@layout/bottomsheet_feed_share_option"/>




</androidx.coordinatorlayout.widget.CoordinatorLayout>