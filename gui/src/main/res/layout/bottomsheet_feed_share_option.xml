<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:behavior_draggable="true"
    app:behavior_fitToContents="true"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <View
        android:id="@+id/v_share_options"
        android:layout_width="wrap_content"
        android:layout_height="490dp"
        android:background="@drawable/bg_round_top_corners"
        android:backgroundTint="@color/bg_windows"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_share_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/hhgrotesk_bold"
        android:text="Share"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@id/tv_share_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_share_label" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_cover_thumbnail"
        android:layout_width="38dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_share_label"
        app:shapeAppearance="@style/CoverThumbnail"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_caption"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="16dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="4"
        android:textColor="@color/white_ope_38"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover_thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_cover_thumbnail"
        app:layout_constraintTop_toTopOf="@id/iv_cover_thumbnail"
        tools:text="My first cover by @user0000" />

    <View
        android:id="@+id/v_copy_link"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_round_button"
        android:backgroundTint="#3D3B48"
        app:layout_constraintEnd_toStartOf="@id/tv_download_video"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_cover_thumbnail"/>

    <TextView
        android:id="@+id/tv_copy_link"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:drawableStart="@drawable/ic_copy"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:drawablePadding="8dp"
        android:paddingVertical="16dp"
        android:text="Copy Link"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@id/v_copy_link"
        app:layout_constraintEnd_toEndOf="@id/v_copy_link"
        app:layout_constraintStart_toStartOf="@id/v_copy_link"
        app:layout_constraintTop_toTopOf="@id/v_copy_link" />

    <TextView
        android:id="@+id/tv_download_video"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:drawablePadding="8dp"
        android:background="@drawable/bg_round_button"
        android:backgroundTint="#3D3B48"
        android:drawableStart="@drawable/ic_arrow_down"
        android:gravity="center_vertical"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp"
        android:text="Download Video"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/v_copy_link"
        app:layout_constraintTop_toTopOf="@id/v_copy_link" />

    <View
        android:id="@+id/v_share_whatsapp"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_round_button"
        android:backgroundTint="#3525D366"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_copy_link" />


    <TextView
        android:id="@+id/tv_share_whatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_whatsapp"
        android:drawablePadding="21dp"
        android:gravity="center_vertical"
        android:text="Share Video on Whatsapp"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@id/v_share_whatsapp"
        app:layout_constraintEnd_toEndOf="@id/v_share_whatsapp"
        app:layout_constraintStart_toStartOf="@id/v_share_whatsapp"
        app:layout_constraintTop_toTopOf="@id/v_share_whatsapp" />

    <View
        android:id="@+id/v_share_instagram"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_round_button"
        android:backgroundTint="#30F00073"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_share_whatsapp" />


    <TextView
        android:id="@+id/tv_share_instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_instagram"
        android:drawablePadding="21dp"
        android:gravity="center_vertical"
        android:text="Share on Instagram Reels"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@id/v_share_instagram"
        app:layout_constraintEnd_toEndOf="@id/v_share_instagram"
        app:layout_constraintStart_toStartOf="@id/v_share_instagram"
        app:layout_constraintTop_toTopOf="@id/v_share_instagram" />

    <View
        android:id="@+id/v_share_other"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_card_outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_share_instagram" />


    <TextView
        android:id="@+id/tv_share_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_more_hori"
        android:drawablePadding="21dp"
        android:gravity="center_vertical"
        android:text="Other Sharing Options"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@id/v_share_other"
        app:layout_constraintEnd_toEndOf="@id/v_share_other"
        app:layout_constraintStart_toStartOf="@id/v_share_other"
        app:layout_constraintTop_toTopOf="@id/v_share_other" />

    <ProgressBar
        android:id="@+id/pb_download_video"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_download_video"
        app:layout_constraintStart_toStartOf="@id/tv_download_video"
        app:layout_constraintEnd_toEndOf="@id/tv_download_video"
        app:layout_constraintBottom_toBottomOf="@id/tv_download_video"/>

</androidx.constraintlayout.widget.ConstraintLayout>