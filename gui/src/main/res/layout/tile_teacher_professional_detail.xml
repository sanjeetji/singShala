<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txvDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/experience"
        android:textAllCaps="true"
        android:textSize="12dp"
        android:fontFamily="@font/hhgrotesk_bold"
        android:textColor="@color/text_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/text_grey"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="75dp"
        app:layout_constraintStart_toEndOf="@+id/txvDetailName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txvDetailName"
        app:layout_constraintBottom_toBottomOf="@+id/txvDetailName"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTeacherExperience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/txvDetailName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/tile_teacher_experience"/>

</androidx.constraintlayout.widget.ConstraintLayout>