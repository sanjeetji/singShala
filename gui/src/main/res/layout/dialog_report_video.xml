<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    app:cardBackgroundColor="@color/bg_card"
    app:cardCornerRadius="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clReportVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvReportText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="38dp"
            android:fontFamily="@font/hhgrotesk_bold"
            android:gravity="center"
            android:text="@string/report_reason_text"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cbAbusive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/selector_check_box"
            android:button="@android:color/transparent"
            android:checked="false"
            android:fontFamily="@font/hkgrotesk_regular"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingTop="6dp"
            android:paddingEnd="15dp"
            android:paddingBottom="6dp"
            android:text="Abusive"
            android:textColor="@drawable/check_box_text_white_black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/cbSpam"
            app:layout_constraintEnd_toStartOf="@id/cbInappropriate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvReportText" />

        <CheckBox
            android:id="@+id/cbInappropriate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/selector_check_box"
            android:button="@android:color/transparent"
            android:checked="false"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingTop="6dp"
            android:paddingEnd="15dp"
            android:paddingBottom="6dp"
            android:text="Inappropriate"
            android:textColor="@drawable/check_box_text_white_black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/cbAbusive"
            app:layout_constraintEnd_toEndOf="@id/cbHateful"
            app:layout_constraintStart_toEndOf="@id/cbAbusive"
            app:layout_constraintTop_toTopOf="@id/cbAbusive" />

        <CheckBox
            android:id="@+id/cbHateful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/selector_check_box"
            android:button="@android:color/transparent"
            android:checked="false"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingTop="6dp"
            android:paddingEnd="15dp"
            android:paddingBottom="6dp"
            android:text="Hateful"
            android:textColor="@drawable/check_box_text_white_black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/cbAbusive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cbInappropriate"
            app:layout_constraintTop_toTopOf="@id/cbAbusive" />

        <CheckBox
            android:id="@+id/cbSpam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_check_box"
            android:button="@android:color/transparent"
            android:checked="false"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingTop="6dp"
            android:paddingEnd="15dp"
            android:paddingBottom="6dp"
            android:text="Spam"
            android:textColor="@drawable/check_box_text_white_black"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/cbFake"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cbAbusive"
            app:layout_constraintBottom_toTopOf="@id/cbDisrespectful"/>

        <CheckBox
            android:id="@+id/cbFake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/selector_check_box"
            android:button="@android:color/transparent"
            android:checked="false"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingTop="6dp"
            android:paddingEnd="15dp"
            android:paddingBottom="6dp"
            android:text="Fake Account"
            android:textColor="@drawable/check_box_text_white_black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/cbSpam"
            app:layout_constraintEnd_toStartOf="@id/cbHarrasment"
            app:layout_constraintStart_toEndOf="@id/cbSpam"
            app:layout_constraintTop_toTopOf="@id/cbSpam" />

        <CheckBox
            android:id="@+id/cbHarrasment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/selector_check_box"
            android:button="@android:color/transparent"
            android:checked="false"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingTop="6dp"
            android:paddingEnd="15dp"
            android:paddingBottom="6dp"
            android:text="Harrasment"
            android:textColor="@drawable/check_box_text_white_black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/cbSpam"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cbFake"
            app:layout_constraintTop_toTopOf="@id/cbSpam" />

        <CheckBox
            android:id="@+id/cbDisrespectful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_check_box"
            android:button="@android:color/transparent"
            android:checked="false"
            android:gravity="center"
            android:paddingStart="11dp"
            android:paddingTop="6dp"
            android:paddingEnd="10dp"
            android:paddingBottom="6dp"
            android:text="Disrespectful"
            android:textColor="@drawable/check_box_text_white_black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/cbSpam"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/cbSpam"
            app:layout_constraintTop_toBottomOf="@+id/cbFake" />

        <EditText
            android:id="@+id/tvReasonReport"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/bg_rounded_grey_button"
            android:fontFamily="@font/hkgrotesk_regular"
            android:gravity="start"
            android:hint="any other reason"
            android:maxLength="250"
            android:padding="10dp"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textColorHint="@color/enhance_text"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/btnReport"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbDisrespectful" />

        <TextView
            android:id="@+id/btnReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/next_button_drawable"
            android:fontFamily="@font/hhgrotesk_bold"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="Report Video"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvReasonReport" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>