<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/on_boarding_nav_graph"
    app:startDestination="@id/nameFragment">

    <fragment
        android:id="@+id/appWalkThroughFragment"
        android:name="com.sensibol.lucidmusic.singstr.gui.app.onboard.walkthrough.AppWalkThroughFragment"
        android:label="AppWalkThroughFragment"
        tools:layout="@layout/fragment_app_walk_through">
        <action
            android:id="@+id/to_onBoardNameFragment"
            app:destination="@id/onBoardNameFragment"
            app:popUpTo="@id/appWalkThroughFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/onBoardNameFragment"
        android:name="com.sensibol.lucidmusic.singstr.gui.app.onboard.OnBoardNameFragment"
        android:label="OnboardingMainFragment"
        tools:layout="@layout/fragment_on_board_name">
        <action
            android:id="@+id/to_onBoardDetailsFragment"
            app:destination="@id/onBoardDetailsFragment"
            app:popUpTo="@id/onBoardNameFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/to_onBoardGenreFragment"
            app:destination="@id/onBoardGenreFragment"
            app:popUpTo="@id/onBoardNameFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/onBoardDetailsFragment"
        android:name="com.sensibol.lucidmusic.singstr.gui.app.onboard.OnBoardDetailsFragment"
        android:label="OnboardingMainFragment"
        tools:layout="@layout/fragment_on_board_details">
        <argument
            android:name="userName"
            app:argType="string" />
        <action
            android:id="@+id/to_onBoardGenreFragment"
            app:destination="@id/onBoardGenreFragment"
            app:popUpTo="@id/onBoardDetailsFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/to_onBoardSongRecommendationFragment"
            app:destination="@id/onBoardSongRecommendationFragment" />
    </fragment>

    <fragment
        android:id="@+id/onBoardGenreFragment"
        android:name="com.sensibol.lucidmusic.singstr.gui.app.onboard.OnBoardGenreFragment"
        android:label="OnboardingMainFragment"
        tools:layout="@layout/fragment_on_board_genre">
        <action
            android:id="@+id/to_onBoardLanguageFragment"
            app:destination="@id/onBoardLanguageFragment"
            app:popUpTo="@id/onBoardGenreFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/onBoardLanguageFragment"
        android:name="com.sensibol.lucidmusic.singstr.gui.app.onboard.OnBoardLanguageFragment"
        android:label="OnboardingMainFragment"
        tools:layout="@layout/fragment_on_board_language">
        <action
            android:id="@+id/to_onBoardSongRecommendationFragment"
            app:destination="@id/onBoardSongRecommendationFragment"
            app:popUpTo="@id/onBoardLanguageFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/onBoardSongRecommendationFragment"
        android:name="com.sensibol.lucidmusic.singstr.gui.app.onboard.OnBoardSongRecommendationFragment"
        android:label="OnboardingMainFragment"
        tools:layout="@layout/fragment_on_board_song_recommendation">
        <action
            android:id="@+id/to_prepareSingHostFragment"
            app:destination="@id/prepareSingHostFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false">
            <argument
                android:name="singMode"
                app:argType="string" />
            <argument
                android:name="songId"
                app:argType="string" />
        </action>

        <action
            android:id="@id/to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/nameFragment"
        android:name="com.sensibol.lucidmusic.singstr.gui.app.onboard.NameFragment"
        tools:layout="@layout/fragment_name"
        android:label="NameFragment">

        <action
            android:id="@+id/to_pickUsernameFragment"
            app:destination="@id/pickUsernameFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"/>

    </fragment>
    <fragment
        android:id="@+id/pickUsernameFragment"
        android:name="com.sensibol.lucidmusic.singstr.gui.app.onboard.PickUsernameFragment"
        android:label="fragment_pick_username"
        tools:layout="@layout/fragment_pick_username" >

        <argument
            android:name="first_name"
            app:argType="string" />
        <argument
            android:name="last_name"
            app:argType="string"
            android:defaultValue=""/>
        <action
            android:id="@+id/to_dobGenderFragment"
            app:destination="@id/dobGenderFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/dobGenderFragment"
        android:name="com.sensibol.lucidmusic.singstr.gui.app.onboard.DobGenderFragment"
        android:label="fragment_dob_gender"
        tools:layout="@layout/fragment_dob_gender">

        <argument
            android:name="first_name"
            app:argType="string" />
        <action
            android:id="@+id/to_singerLevelFragment"
            app:destination="@id/singerLevelFragment" />
    </fragment>
    <fragment
        android:id="@+id/singerLevelFragment"
        android:name="com.sensibol.lucidmusic.singstr.gui.app.onboard.SingerLevelFragment"
        android:label="fragment_singer_level"
        tools:layout="@layout/fragment_singer_level">

        <argument
            android:name="first_name"
            app:argType="string" />

        <action
            android:id="@id/to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>
    </fragment>

</navigation>