<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/colorPrimary" />
                </shape>
            </item>
            <item android:width="24dp" android:height="24dp" android:drawable="@drawable/ic_audiotrack" android:gravity="center" />
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="3dp" android:color="#fff" />
                    <solid android:color="@color/colorPrimary" />
                </shape>
            </item>
            <item android:width="24dp" android:height="24dp" android:drawable="@drawable/ic_audiotrack" android:gravity="center" />
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="3dp" android:color="#44D050FF" />
                </shape>
            </item>
            <item android:width="24dp" android:height="24dp" android:drawable="@drawable/ic_audiotrack" android:gravity="center" />
        </layer-list>
    </item>
</selector>